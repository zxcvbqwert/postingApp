<!-- /views/posts/edit.ejs -->

<% layout('layouts/boilerplate') %>

<a href="/posts/<%= foundPost._id %>">Back</a>

<form action="/posts/<%= foundPost._id %>?_method=PATCH" method="POST" enctype="multipart/form-data">
	<label for="title">Title:</label>
	<input type="text" name="post[title]" id="title" value="<%= foundPost.title %>"><br>

	<label for="image">Replace Image:</label>
	<input type="file" name="image" id="image"><br>
	<img src="<%= foundPost.image.url %>"><br>

	<label for="description">Description:</label>
	<input type="text" name="post[description]" id="description" value="<%= foundPost.description %>"><br>

	<button>Save</button>
</form>

<form action="/posts/<%= foundPost._id %>?_method=DELETE" method=POST>
	<button>Delete Post</buton>
</form